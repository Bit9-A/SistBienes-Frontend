{ 
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext", "es2015.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"], // Alias para assets
      "@components/*": ["components/*"], // Alias para componentes
      "@views/*": ["views/*"], // Alias para vistas
      "@contexts/*": ["contexts/*"], // Alias para contextos
      "@hooks/*": ["hooks/*"], // Alias para hooks
      "@types/*": ["types/*"], // Alias para types
      "@themes/*": ["themes/*"],
      "@api/":["api/*"] // Alias para themes
    }
  },
  "include": [
    "./src"
, "src/views/admin/user/components/.tsx"  ], 
"exclude": [
    "node_modules", // Excluir node_modules
    "build", // Excluir la carpeta de salida
    "dist" // Excluir la carpeta de salida de Vite
  ]
}
