# Configuración de Nginx para SistBienes Frontend
# Ubicación: /etc/nginx/sites-available/sistbienes-frontend

server {
    listen 80;
    server_name tu-dominio.com www.tu-dominio.com;  # Cambia esto por tu dominio o IP

    # Directorio raíz donde están los archivos compilados
    root /var/www/sistbienes/frontend/dist;
    index index.html;

    # Logs específicos para este sitio
    access_log /var/log/nginx/sistbienes-frontend-access.log;
    error_log /var/log/nginx/sistbienes-frontend-error.log;

    # Configuración para aplicaciones SPA (Single Page Application)
    # Todas las rutas que no sean archivos estáticos se redirigen a index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache para archivos estáticos (JS, CSS, imágenes, fuentes)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # No cachear el index.html para que siempre se obtenga la última versión
    location = /index.html {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Compresión gzip para mejorar el rendimiento
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/x-javascript
        application/xml
        application/xml+rss
        image/svg+xml;

    # Seguridad: Headers adicionales
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

